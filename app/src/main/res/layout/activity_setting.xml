<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:padding="10dp">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_200">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/close_settings_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đóng"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:id="@+id/update_account_settings_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="254dp"
                    android:layout_marginRight="10dp"
                    android:layout_toEndOf="@+id/close_settings_btn"
                    android:text="Cập Nhật"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />


            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_profile_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@+id/app_bar_settings"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/profile" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="@font/font"
            android:id="@+id/profile_image_change_btn"
            android:layout_marginTop="20dp"
            android:text="Chỉnh sửa ảnh đại diện"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textColor="@color/purple_200"
            android:layout_height="match_parent">
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/setting_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="40dp"
            android:fontFamily="@font/font"
            android:text="Tài khoản"
            android:textColor="@color/purple_200"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/font"
            android:text="Họ Và Tên * :"
            android:textColor="@color/purple_200"
            android:textSize="18sp">

        </TextView>

        <EditText
            android:id="@+id/settings_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/btn_shape_round"
            android:fontFamily="@font/font"
            android:hint="Họ Và Tên"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@color/purple_200"
            android:textColorHint="@color/purple_200" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/font"
            android:text="Email * :"
            android:textColor="@color/purple_200"
            android:textSize="18sp">

        </TextView>

        <EditText
            android:id="@+id/settings_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/btn_shape_round"

            android:fontFamily="@font/font"
            android:hint="Email"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@color/purple_200"
            android:textColorHint="@color/purple_200" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/font"
            android:text="Số Điện Thoại * :"
            android:textColor="@color/purple_200"
            android:textSize="18sp">

        </TextView>

        <EditText
            android:id="@+id/settings_sdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/btn_shape_round"
            android:fontFamily="@font/font"
            android:hint="Số Điện Thoại"
            android:inputType="number"
            android:maxLength="10"
            android:padding="15dp"
            android:textColor="@color/purple_200"
            android:textColorHint="@color/purple_200" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/font"
            android:text="Địa Chỉ * :"
            android:textColor="@color/purple_200"
            android:textSize="18sp">

        </TextView>

        <EditText
            android:id="@+id/settings_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"

            android:background="@drawable/btn_shape_round"
            android:fontFamily="@font/font"
            android:hint="Địa Chỉ"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@color/purple_200"
            android:textColorHint="@color/purple_200" />
    </LinearLayout>
</LinearLayout>