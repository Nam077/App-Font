<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:padding="10dp"
    tools:context=".LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton

            android:id="@+id/back_bt_cf"
            android:layout_width="70dp"
            android:layout_height="51dp"
            android:layout_gravity="right"
            android:layout_marginLeft="0sp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/back" />

    </LinearLayout>

    <ImageView
        android:layout_width="363dp"
        android:layout_height="167dp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:src="@drawable/order" />

    <TextView
        android:fontFamily="@font/font_3"
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:text="Xác Nhận Mua Hàng" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="20sp">

        <EditText
            android:fontFamily="@font/font"
            android:id="@+id/shippment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape_round"
            android:hint="Họ Và Tên"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@color/purple_200"

            android:textColorHint="@color/purple_200" />

        <EditText
            android:fontFamily="@font/font"
            android:id="@+id/shippment_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_shape_round"
            android:hint="Số Điện Thoại"
            android:inputType="number"
            android:maxLength="10"
            android:padding="15dp"
            android:textColor="@color/purple_200"
            android:textColorHint="@color/purple_200" />

        <EditText
            android:fontFamily="@font/font"
            android:id="@+id/shippment_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_shape_round"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColor="@color/purple_200"
            android:textColorHint="@color/purple_200" />

        <EditText
            android:fontFamily="@font/font"
            android:id="@+id/shippment_address"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_shape_round"
            android:gravity="left"
            android:hint="Địa Chỉ"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@color/purple_200"

            android:textColorHint="@color/purple_200" />

        <EditText
            android:fontFamily="@font/font"
            android:id="@+id/shippment_totalprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_shape_round"
            android:hint="Tổng Tiền"
            android:focusable="false"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColor="@color/purple_200"
            android:textColorHint="@color/purple_200" />

        <Button
            android:fontFamily="@font/font_2"
            android:id="@+id/shippment_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button2"
            android:text="Mua Hàng"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>