<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_200"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageButton
            android:id="@+id/back_bt_prd"
            android:layout_width="70dp"
            android:layout_height="51dp"
            android:layout_gravity="right"
            android:layout_marginLeft="0sp"
            android:background="@android:color/transparent"
            android:src="@drawable/back2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="0dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/imageslider_2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:auto_cycle="true"
                app:corner_radius="20"
                app:delay="2"
                app:period="3000"
                app:placeholder="@drawable/sdd">

            </com.denzcoskun.imageslider.ImageSlider>

        </LinearLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="30dp">

                    <TextView
                        android:id="@+id/product_name_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-9sp"
                        android:fontFamily="@font/font_3"
                        android:text="Tên Font"
                        android:textAllCaps="true"
                        android:textColor="@color/purple_200"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/product_category_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-9dp"
                        android:fontFamily="@font/font"
                        android:text="Loại Font"
                        android:textColor="#4A4A4A"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/product_price_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/font"
                        android:text="Giá Font"
                        android:textColor="#EE4D2D"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/product_description_details"
                        android:layout_width="wrap_content"
                        android:layout_height="232dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/font"
                        android:inputType="text|textMultiLine"
                        android:text="bfvjbfjgvkngjsngksndglksdnglskdngslkdgnlskgnlsknglksnglskgnlskgnslkgn"
                        android:textColor="@color/purple_200">

                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/add_to_cart"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button2"
                            android:text="Thêm vào giỏ hàng"
                            android:textColor="@color/white"
                            android:textSize="15sp">

                        </Button>

                        <Button
                            android:id="@+id/close_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/button2x"
                            android:text="Hủy"
                            android:textColor="@color/white"
                            android:textColorHint="#fe44"
                            android:textSize="15sp">

                        </Button>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

            </LinearLayout>

            <TextView
                android:id="@+id/number_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:visibility="invisible">

            </TextView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
